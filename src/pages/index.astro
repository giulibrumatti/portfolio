---
import Layout from "../layouts/Layout.astro"
import SectionContainer from "../components/Section.astro"
import Experience from "../components/Experience.astro"
import Briefcase from "../components/icons/Briefcase.astro"
import CodeIcon from "../components/icons/Code.astro"
import Projects from "../components/Projects.astro"
import Hero from "@/components/Hero.astro"
import { basics } from "@cv"
const { name } = basics
---

<Layout
  title="Porfolio de Giuliano - Desarrollador Java"
  description="Desarrollador Java - Programador Web"
>
  <main class="px-4">
    
    <SectionContainer class="py-44 pb-32">
      <Hero></Hero>
    </SectionContainer>

    <SectionContainer id="experiencia">
      <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
        <Briefcase class="size-7" />
         Experiencia laboral
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id="proyectos">
      <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
        <CodeIcon class="size-7" />
         Proyectos
      </h2>
      <Projects />
    </SectionContainer>
  </main>
</Layout>